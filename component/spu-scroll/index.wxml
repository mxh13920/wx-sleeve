<wxs src="../../miniprogram_npm/lin-ui/filter/string.wxs" module="s"></wxs>
<view class="container l-class">
    <image class="title" mode="widthFix" src="{{theme.title_img}}" />
    <scroll-view scroll-x class="scroll-view">
        <view class="inner">
            <block wx:for="{{spuList}}" wx:key="index">
                <view class="scroll-container">
                    <image class="aa" mode="widthFix" src="{{item.img}}" />
                    <text>
                        {{item.title.length>8?s.substring(item.title,0,7)+'...':item.title}}
                    </text>
                    <l-price autofix color="#157658" l-unit-class="price-unit" l-value-class="price-value" value="{{item.price}}"></l-price>
                </view>
            </block>
        </view>
    </scroll-view>
</view>